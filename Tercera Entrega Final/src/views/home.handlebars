<div>
    <h1> Proyecto final </h1>
    <h3> Lista de productos: </h3>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>TITULO</th>
                <th>DESCRIPCION</th>
                <th>PRECIO</th>
                <th>CODIGO</th>
                <th>STOCK</th>
                <th>CATEGORIA</th>
                <th>STATUS</th>
                <th>IMAGEN</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>
                    {{#if this.status}}
                        ACTIVO
                    {{else}}
                        INACTIVO
                    {{/if}}
                </td>
                <td>
                    {{#if this.thumbnails.length}}
                        <a href="{{this.thumbnails.[0]}}" target="_blank">{{this.thumbnails.[0]}}</a>
                    {{else}}
                        No hay imagen
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
